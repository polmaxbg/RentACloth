@model RentACloth.Models.Categories.CategoryViewModel
@{
    ViewData["Title"] = "Аdd";
    Layout = "_LayoutClear";

}

@{
    ViewData["Title"] = "Добави основна категория";
}

<div class="mobile-fondsize-20 h2 mt-5 text-center text-info">@ViewData["Title"]</div>
<hr />
<div class="row d-flex justify-content-center mt-3">
    <div class="col-md-6">
        <section>
            <form method="post" asp-controller="Category" asp-action="Add">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Добави</button>
                </div>
            </form>
        </section>
    </div>
</div>