@using RentACloth.Components
@model RentACloth.Models.Оrders.ConfirmOrderViewModel

@{
    ViewData["Title"] = "Потвърди поръчката";
    Layout = "_LayoutClear";

}

<div class="h3 text-center mb-3 text-info">@ViewData["Title"]</div>
<hr />
<div class="progress mb-3">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 66%;" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100">66%</div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-body">
            <div><span class="font-weight-bold">Име:</span> @Model.Recipient</div>
            <hr />
            <div><span class="font-weight-bold">Телефонен номер:</span> @Model.PhoneNumber</div>
            <hr />
            <div><span class="font-weight-bold">Адрес:</span> @Model.DeliveryAddressStreet @Model.DeliveryAddressDescription</div>
            <hr />
        </div>
    </div>

    <div class="col-md-6">
        @await Component.InvokeAsync(typeof(FullShoppingBagDetailsComponent))

        <div class="text-center mt-4">
            <a asp-area="" asp-controller="Orders" asp-action="Complete" class="btn btn-danger btn-lg"><i class="fa fa-check"></i> Потвърди поръчката</a>
        </div>
    </div>
</div>
