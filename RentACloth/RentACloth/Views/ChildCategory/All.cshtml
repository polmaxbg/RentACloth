
@model RentACloth.Controllers.AllCategoriesViewModel
@{
    ViewData["Title"] = "Под категории";
}
<div class="container">
    <div class="mobile-fondsize-20 h2">@ViewData["Title"]</div>
    <p><a asp-controller="ChildCategory" asp-action="Add" class="btn btn-success">Създай новa под категория</a></p>
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-1 d-flex justify-content-center">Номер</th>
                <th scope="col" class="col-lg-2 d-flex justify-content-center">Име</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center">Основна категории</th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center">Брой продукти</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
            @{int count = 0; }
            @foreach (var category in Model.ChildCategoryViewModel)
            {
                count++;
                <tr class="row">
                    <td class="col-lg-1 d-flex justify-content-center">@count</td>
                    <td class="col-lg-2 d-flex justify-content-center">@category.Name</td>
                    <td class="col-lg-3 d-flex justify-content-center">@category.CategoryName</td>
                    <td class="col-lg-1 d-flex justify-content-center">@category.ProductsCount</td>
                    <td class="col-lg-3 d-flex justify-content-around">
                        <a asp-controller="ChildCategory" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Промени</a>
                        <a asp-controller="ChildCategory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>