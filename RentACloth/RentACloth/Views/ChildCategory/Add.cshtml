@model RentACloth.Controllers.AddChildCategoryViewModel
@{
    ViewData["Title"] = "Добави под категория";
    Layout = "_LayoutClear";

}

<div class="mobile-fondsize-20 h2 mt-3 text-center text-info">@ViewData["Title"]</div>
<hr />
<div class="row  d-flex justify-content-center mt-3">
    <div class="col-md-6">
        <section>
            <form method="post" asp-controller="ChildCategory" asp-action="Add" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="select-width" name="CategoryId">
                        <option value="" disabled selected>-- Основна категория --</option>
                        @if (Model.Categories != null)
                        {
                            foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Добави</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}