@model RentACloth.Models.ProductsViewModel.ProductDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<div class="mx-auto w-50">
    <table class="table-hover table table-striped">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Brand Name</th>
            <th>Event Type</th>
            @if (@Model.CategoryName == "Shoes" || @Model.CategoryName == "Clothes")
            {
                <th>Size</th>
            }
        </tr>
       
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Price</td>
            <td>@Model.Description</td>
            <td>@Model.BrandName</td>
            <td>@Model.EventType</td>
            @if (@Model.CategoryName == "Shoes" || @Model.CategoryName == "Clothes")
            {
                <td>@Model.Size</td>
            }
            <th><a asp-area="" asp-controller="ShoppingBag" asp-action="Add" asp-route-id="@Model.Id">Rent A Cloth</a></th>
        </tr>
    </table>
</div>
